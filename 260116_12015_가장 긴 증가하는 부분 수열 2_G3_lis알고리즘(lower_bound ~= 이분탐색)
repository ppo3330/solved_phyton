//O(A log A)
//가장 긴 수열은 lis알고리즘
//빈 수열을 만들고 seq를 돌며 lis안에 든것보다 더 크면 추가 작으면 lis속 값중 lowerbound를 찾아 그값으로 바꾸기
//lowerbound에 관해 기억하기. 조금 다름.
import sys
input = sys.stdin.readline


A = int(input())
seq = list(map(int,input().split()))

lis = []

def b_search(lis, element):
    st = 0
    ed = len(lis)-1
    while(st<ed):
        mid = (st+ed)//2
        if lis[mid] == element:
            return mid
        if lis[mid] < element:
            st = mid+1
        else:
            ed = mid
    return st


def lisal():
    ret = 1
    lis = []
    lis.append(seq[0])
    for i in range(1,A):
        if seq[i] > lis[len(lis)-1]:
            lis.append(seq[i])
        else:
            pos = b_search(lis,seq[i])
            lis[pos] = seq[i]
    print(len(lis))
        
lisal()
