#분할정복을 이용했으나 메모리초과. 2^N 이차원배열. N의 최대값이 15이므로 메모리가 초과됨.
i=0
def DNQ(r1,r2,c1,c2):
    global i
    if(r1 == r2 and c1 == c2):
        arr[r1][c1] = i
        i = i+1
        return
    midr = (r1+r2)//2
    midc = (c1+c2)//2
    DNQ(r1,midr,c1,midc)
    DNQ(r1,midr,midc+1,c2)
    DNQ(midr+1,r2,c1,midc)
    DNQ(midr+1,r2,midc+1,c2)

N,r,c = map(int,input().split())

arr = [[0]*(2**N-) for j in range(2**N)]

DNQ(0,2**N,0,2**N)

print(arr[r][c])
